</main>

<style>
  main {
    --space: 10px;
    --positionX: 0%;
    --positionY: 0%;

    background-color: transparent;
    background-image:
      repeating-radial-gradient(
        circle at var(--positionX) var(--positionY),
        transparent 0,
        #34353a var(--space)
      ),
      repeating-linear-gradient(#3a3a34, #000000, #ffa337);
    animation: 3s ease 200ms 1 running forwards spin;

    --color-1: #353023;
    --color-2: #4d452b;
    --color-3: #f4d743;
    --color-4: #f3b034;
    --color-5: #f45a18;

    position: relative;
  }

  @property --space {
    syntax: "<length>";
    inherits: true;
    initial-value: 10px;
  }

  @property --positionX {
    syntax: "<percentage>";
    inherits: true;
    initial-value: 0%;
  }

  @property --positionY {
    syntax: "<percentage>";
    inherits: true;
    initial-value: 0%;
  }

  @keyframes spin {
    0% {
      --space: 10px;
      --positionX: 0%;
      --positionY: 0%;
    }
    100% {
      --space: 30px;
      --positionX: 100%;
      --positionY: 0%;
    }
  }

  @property --gradient-angle {
    syntax: "<angle>";
    initial-value: 0deg;
    inherits: false;
  }

  main::before,
  main::after {
    content: "";
    position: absolute;
    inset: -0.2rem;
    z-index: -1;
    background: conic-gradient(
      from var(--gradient-angle),
      var(--color-3),
      var(--color-4),
      var(--color-5),
      var(--color-4),
      var(--color-3)
    );
    border-radius: inherit;
    animation: rotation 20s linear infinite;
  }

  main::after {
    filter: blur(3.5rem);
  }

  @keyframes rotation {
    0% {
      --gradient-angle: 0deg;
    }
    100% {
      --gradient-angle: 360deg;
    }
  }
</style>
